<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eventmanager.event_manager.RegistrationScreen"
    android:background="@color/colorPrimaryDark">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- LOGO -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/app_logo" />

        <!-- APP NAME-->
        <TextView
            android:id="@+id/appName"
            style="@style/textView_style"
            android:background="@null"
            android:text="מנהל האירועים"
            android:textAllCaps="false"
            android:textStyle="bold" />

        <!-- EMAIL TEXT FIELD -->
        <EditText
            style="@style/editText_style"
            android:id="@+id/userMail"
            android:inputType="textEmailAddress"
            android:hint="אימייל"/>

        <!-- PASSWORD TEXT FIELD -->
        <EditText
            style="@style/editText_style"
            android:id="@+id/userPassword"
            android:inputType="textPassword"
            android:hint="סיסמה"/>

        <!-- REGISTER BUTTON -->
        <Button
            android:id="@+id/registerButton"
            style="@style/button_background"
            android:text="צור חשבון"
            android:onClick="register"/>

        <!-- CONTACT US  -->
        <Button
            android:id="@+id/returnToLogin"
            style="@style/button_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="returnToLogin"
            android:text="חזרה" />

        <TextView
            android:id="@+id/contactUs"
            style="@style/textView_style"
            android:background="@null"
            android:text="צור קשר"
            android:clickable="true"
            android:onClick="contactUs" />
    </LinearLayout>
</RelativeLayout>
